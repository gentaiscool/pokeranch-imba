<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewCharchar"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignLeft="@+id/imageViewSquir"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="186dp"
        android:layout_marginRight="27dp"
        android:src="@drawable/charchar" />

    <ImageView
        android:id="@+id/imageViewBulba"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:src="@drawable/bulba" />

    <ImageView
        android:id="@+id/imageViewSquir"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/squir" />

    <Button
        android:id="@+id/buttonMonsterPicked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="200dp"
        android:text="Choose" />

    <RadioButton
        android:id="@+id/RadioButtonBulba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="120dp"
        android:text="Bulba (Grass)" />


    <RadioButton
        android:id="@+id/RadioButtonSquir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="120dp"
        android:text="Squir (Water)" />

    <RadioButton
        android:id="@+id/RadioButtonCharchar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="390dp"
        android:layout_marginTop="120dp"
        android:text="Charchar (Fire)" />

</RelativeLayout>
