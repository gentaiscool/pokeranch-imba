<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-240dp"
        android:src="@drawable/pokedex" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="17dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/pokedexlogo" />

	<ImageView
        android:id="@+id/imageViewPanelGround"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
		android:layout_marginTop="90dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/panelground" />
	
	<ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_marginLeft="-7dp"
        android:paddingLeft="7dp"
        android:layout_marginTop="90dp" 
        android:paddingTop="12dp">
		<TableLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/tableLayoutPokeDex"
	        android:stretchColumns="1">
	        <!-- everything you already have -->
	        <TableRow 
	            android:layout_width="500dp"
	            android:layout_height="300dp">
	        </TableRow>
	    </TableLayout>
    </ScrollView>
	
    <ImageView
        android:id="@+id/imageViewMonster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/bulba" />

    <TextView
        android:id="@+id/textViewNamaMonster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="100dp"
        android:text="Bulba"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/textViewTypeMonster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="180dp"
        android:text="Grass"
        android:textSize="10dp"/>
    
    <TextView
        android:id="@+id/textViewHPBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="180dp"
        android:text="HP: "
        android:textSize="10dp"/>
    
     <TextView
        android:id="@+id/textViewMPBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="180dp"
        android:text="MP: "
        android:textSize="10dp"/>
     
     <TextView
        android:id="@+id/textViewAttackBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="180dp"
        android:text="Attack: "
        android:textSize="10dp"/>
     
     <TextView
        android:id="@+id/textViewDefenseBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="180dp"
        android:text="Defense: "
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/textViewMonsterNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="178dp"
        android:text="001"
        android:textSize="40dp" />

    
	
</RelativeLayout>