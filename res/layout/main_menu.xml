<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenu" >

    <ImageButton
        android:id="@+id/imageButtonNewGame"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/newgamebutton2" />
	<ImageButton
        android:id="@+id/imageButtonLoadGame"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/loadgamebutton2" 
        android:background="@null" />
	<ImageButton
        android:id="@+id/imageButtonExitGame"
        android:layout_marginTop="110dp"
        android:layout_marginLeft= "15dp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/exitbutton" />
	<ImageButton
        android:id="@+id/imageButtonHelpGame"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/helpbutton" />

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="500dp"
	    android:layout_height="400dp"
	    android:layout_alignParentBottom="true"
	    android:layout_marginRight="29dp" >
	</ScrollView>

</RelativeLayout>