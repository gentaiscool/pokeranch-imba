<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity" >

    <ImageButton
        android:id="@+id/imageButtonNewGame"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="327dp" 
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/newgamebutton2" />
	<ImageButton
        android:id="@+id/imageButtonLoadGame"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="355dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/loadgamebutton2" 
        android:background="@null" />
	<ImageButton
        android:id="@+id/imageButtonHelpGame"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="335dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/helpbutton" />
	<ImageButton
        android:id="@+id/imageButtonExitGame"
        android:layout_marginTop="120dp"
        android:layout_marginLeft= "15dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/exitbutton" />

	<ImageView
		    android:id="@+id/imageViewPokeBall"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:src="@drawable/pokeball" />

	<ImageView
	    android:id="@+id/imageViewLogo"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:src="@drawable/logo" />

	<ImageButton
	    android:id="@+id/imageButtonPokeDex"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="170dp"
	    android:layout_marginLeft="0dp"
	    android:src="@drawable/pokedextablet" />

</RelativeLayout>